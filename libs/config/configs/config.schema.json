{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "environment": {
      "enum": ["dev", "prod"]
    },
    "api": {
      "type": "string"
    },
    "websocket": {
      "type": "string"
    },
    "client": {
      "type": "string"
    },
    "vapidPublicKey": {
      "type": "string"
    },
    "googleClientId": {
      "type": "string"
    },
    "mysqlDatabase": {
      "type": "object",
      "properties": {
        "host": {"type": "string"},
        "port": {"type": "number"},
        "user": {"type": "string"},
        "database": {"type": "string"}
      },
      "required": ["host", "port", "user", "database"],
      "additionalProperties": false
    }
  },
  "required": ["environment", "api", "client", "vapidPublicKey", "googleClientId", "mysqlDatabase"],
  "additionalProperties": false
}
