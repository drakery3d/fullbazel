{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "environment": {
      "enum": ["dev", "prod"]
    },
    "api": {
      "type": "string"
    },
    "client": {
      "type": "string"
    },
    "websocket": {
      "type": "string"
    },
    "vapidPublicKey": {
      "type": "string"
    },
    "googleClientId": {
      "type": "string"
    },
    "mysqlDatabase": {
      "type": "object",
      "properties": {
        "host": {"type": "string"},
        "port": {"type": "string"},
        "user": {"type": "string"},
        "database": {"type": "string"}
      },
      "required": ["host", "port", "user", "database"],
      "additionalProperties": false
    },
    "kafka": {
      "type": "object",
      "properties": {
        "brokers": {"type": "array"},
        "apiKey": {"type": "string"}
      },
      "required": ["brokers"],
      "additionalProperties": false
    }
  },
  "required": [
    "environment",
    "api",
    "client",
    "websocket",
    "vapidPublicKey",
    "googleClientId",
    "mysqlDatabase",
    "kafka"
  ],
  "additionalProperties": false
}
