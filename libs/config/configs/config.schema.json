{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "environment": {
      "enum": ["dev", "prod"]
    },
    "api": {
      "type": "string",
      "description": "Endpoint to the API gateway."
    },
    "database": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "user": {
          "type": "string"
        }
      }
    },
    "vapidPublicKey": {
      "type": "string"
    }
  },
  "required": ["environment", "api", "database", "vapidPublicKey"],
  "additionalProperties": false
}
