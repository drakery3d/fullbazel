{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6"],
    "target": "es5",
    "paths": {
      "@libs/*": ["./libs/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "bazel-out", "bazel-bin", "bazel-testlogs", "bazel-angular-bazel-starter", "dist"]
}