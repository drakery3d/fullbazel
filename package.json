{
  "name": "fullstack-bazel",
  "repository": "git@github.com:flolu/fullstack-bazel.git",
  "private": true,
  "scripts": {
    "bazel": "bazelisk",
    "build": "bazel build //...",
    "test": "bazel test --test_output=errors //...",
    "test:verbose": "bazel test --test_output=all //...",
    "client": "ibazel run //services/client:dev_server",
    "client:ssr": "bazel run //services/client:prod_server_image",
    "client:benchmark": "lighthouse http://localhost:8080 --preset=desktop --output-path=lighthouse.html --view",
    "server": "bazelisk build //libs/config:generate_docker_compose_env && docker-compose -f docker-compose.yaml up --build",
    "deploy": "bazel run :kubernetes.apply",
    "upsert-secrets": "shx cp -n libs/config/secrets/example.secrets.json libs/config/secrets/dev.secrets.json && shx cp -n libs/config/secrets/example.secrets.json libs/config/secrets/prod.secrets.json",
    "up": "yarn upgrade-interactive",
    "up-bazel": "yarn upgrade --scope @bazel",
    "patch": "patch-package --patch-dir dev/patches",
    "postinstall": "yarn run patch && yarn run upsert-secrets && ngcc"
  },
  "dependencies": {
    "@angular/animations": "^10.1.4",
    "@angular/common": "^10.1.4",
    "@angular/core": "^10.1.4",
    "@angular/platform-browser": "^10.1.4",
    "@angular/platform-browser-dynamic": "^10.1.4",
    "@angular/platform-server": "^10.1.4",
    "@angular/router": "^10.1.4",
    "@angular/service-worker": "^10.1.4",
    "@ngrx/effects": "9.1.2",
    "@ngrx/entity": "9.1.2",
    "@ngrx/router-store": "^9.1.2",
    "@ngrx/store": "9.1.2",
    "@nguniversal/express-engine": "^10.1.0",
    "compression": "^1.7.4",
    "core-js": "2.6.9",
    "engine.io-parser": "^4.0.2",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "rxjs": "^6.6.3",
    "socket.io": "^3.0.1",
    "socket.io-client": "^3.0.1",
    "systemjs": "6.1.2",
    "tslib": "^2.0.1",
    "uuid": "^8.3.1",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular/compiler": "^10.1.4",
    "@angular/compiler-cli": "^10.1.4",
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@bazel/bazelisk": "^1.6.1",
    "@bazel/concatjs": "^3.0.0",
    "@bazel/ibazel": "^0.13.2",
    "@bazel/protractor": "^3.0.0",
    "@bazel/rollup": "^3.0.0",
    "@bazel/terser": "^3.0.0",
    "@bazel/typescript": "^3.0.0",
    "@ngrx/store-devtools": "9.1.2",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.4",
    "@types/flat": "^5.0.1",
    "@types/jasmine": "^3.6.2",
    "@types/node": "^14.11.2",
    "@types/uuid": "^8.3.0",
    "flat": "^5.0.2",
    "history-server": "^1.3.1",
    "html-insert-assets": "^0.12.0",
    "jasmine": "^3.6.3",
    "json-schema-to-typescript": "^10.0.3",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-requirejs": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.8",
    "lighthouse": "^7.0.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2",
    "protractor": "^7.0.0",
    "requirejs": "^2.3.6",
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "shx": "^0.3.3",
    "terser": "^5.3.4",
    "ts-morph": "^9.1.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5",
    "yaml": "^1.10.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "semi": false
  }
}
