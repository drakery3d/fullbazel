{
  "name": "abs",
  "repository": "git@github.com:flolu/angular-bazel-starter.git",
  "private": true,
  "scripts": {
    "bazel": "bazelisk",
    "dev": "yarn run setup-env dev && ibazel run //services/client:dev_server",
    "dev-with-prod-env": "yarn run setup-env prod && ibazel run //services/client:dev_server",
    "app": "yarn run setup-env dev && bazel run //services/client:app_server",
    "pwa": "yarn run setup-env dev && bazel run //services/client:pwa_server",
    "ssr": "yarn run setup-env dev && bazel run //services/client:prod_server_image",
    "client": "yarn run setup-env dev && bazel run //services/client",
    "server:dev": "yarn ts-node-dev -r tsconfig-paths/register services/server dev",
    "server": "yarn ts-node -r tsconfig-paths/register services/server",
    "setup-env": "yarn ts-node services/client/environment/setup-script",
    "upsert-secrets": "shx cp -n libs/config/secrets/dev.secrets-example.json libs/config/secrets/dev.secrets.json && shx cp -n libs/config/secrets/prod.secrets-example.json libs/config/secrets/prod.secrets.json",
    "postinstall": "patch-package --patch-dir dev/patches && yarn run setup-env dev && yarn run upsert-secrets && ngcc"
  },
  "dependencies": {
    "@angular/animations": "^10.1.4",
    "@angular/common": "^10.1.4",
    "@angular/core": "^10.1.4",
    "@angular/platform-browser": "^10.1.4",
    "@angular/platform-browser-dynamic": "^10.1.4",
    "@angular/platform-server": "^10.1.4",
    "@angular/router": "^10.1.4",
    "@angular/service-worker": "^10.1.4",
    "@ngrx/effects": "9.1.2",
    "@ngrx/entity": "9.1.2",
    "@ngrx/router-store": "^9.1.2",
    "@ngrx/store": "9.1.2",
    "@nguniversal/express-engine": "^10.1.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "rxjs": "^6.6.3",
    "socket.io": "^3.0.1",
    "socket.io-client": "^3.0.1",
    "tslib": "^2.0.1",
    "uuid": "^8.3.1",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular/compiler": "^10.1.4",
    "@angular/compiler-cli": "^10.1.4",
    "@bazel/bazelisk": "^1.6.1",
    "@bazel/ibazel": "^0.13.2",
    "@bazel/karma": "^2.2.0",
    "@bazel/rollup": "^2.2.0",
    "@bazel/terser": "^2.2.0",
    "@bazel/typescript": "^2.2.0",
    "@ngrx/store-devtools": "9.1.2",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.4",
    "@types/node": "^14.11.2",
    "@types/uuid": "^8.3.0",
    "history-server": "^1.3.1",
    "html-insert-assets": "^0.10.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2",
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "shx": "^0.3.3",
    "terser": "^5.3.4",
    "ts-morph": "^9.1.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5",
    "yaml": "^1.10.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "semi": false
  }
}
