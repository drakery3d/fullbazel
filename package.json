{
  "name": "fullstack-bazel",
  "repository": "git@github.com:flolu/fullstack-bazel.git",
  "private": true,
  "scripts": {
    "bazel": "bazelisk",
    "build": "bazel build //...",
    "test": "bazel test --test_output=errors //...",
    "test:verbose": "bazel test --test_output=all //...",
    "client": "ibazel run //services/client:dev_server",
    "client:pwa": "bazel run //services/client:pwa_server",
    "client:ssr": "bazel run //services/client:prod_server_image",
    "client:benchmark": "lighthouse http://localhost:8080 --preset=desktop --output-path=lighthouse.html --view",
    "server": "bazelisk build //libs/config:generate_docker_compose_env && docker-compose -f docker-compose.yaml up --build",
    "deploy": "bazel run :kubernetes.apply",
    "lint": "eslint .",
    "lint-errors": "eslint . --quiet",
    "upsert-secrets": "shx cp -n libs/config/secrets/example.secrets.json libs/config/secrets/dev.secrets.json && shx cp -n libs/config/secrets/example.secrets.json libs/config/secrets/prod.secrets.json",
    "up": "yarn upgrade-interactive",
    "up-bazel": "yarn add -D @bazel/concatjs @bazel/rollup @bazel/terser @bazel/typescript",
    "check-deps": "depcheck --ignores=\"core-js,systemjs,tslib,@babel/*,@bazel/*,@types/jasmine,history-server,html-insert-assets,jasmine,karma,karma-*,requirejs,terser,ts-node-dev,tsconfig-paths\" --skip-missing=true",
    "patch": "patch-package --patch-dir dev/patches",
    "postinstall": "yarn run patch && yarn run upsert-secrets && ngcc"
  },
  "dependencies": {
    "@angular/animations": "^11.0.9",
    "@angular/common": "^11.0.9",
    "@angular/core": "^11.0.9",
    "@angular/platform-browser": "^11.0.9",
    "@angular/platform-browser-dynamic": "^11.0.9",
    "@angular/platform-server": "^11.0.9",
    "@angular/router": "^11.0.9",
    "@angular/service-worker": "^11.0.9",
    "@ngrx/effects": "9.1.2",
    "@ngrx/entity": "9.1.2",
    "@ngrx/router-store": "^9.1.2",
    "@ngrx/store": "9.1.2",
    "@nguniversal/express-engine": "^11.0.1",
    "async-retry": "^1.3.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "core-js": "2.6.9",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "inversify": "^5.0.5",
    "mysql2": "^2.2.5",
    "query-string": "^6.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "systemjs": "6.1.2",
    "tslib": "^2.0.1",
    "uuid": "^8.3.2",
    "ws": "^7.4.3",
    "zone.js": "0.10.3"
  },
  "devDependencies": {
    "@angular/compiler": "^11.0.9",
    "@angular/compiler-cli": "^11.0.9",
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@bazel/bazelisk": "^1.6.1",
    "@bazel/concatjs": "^3.2.0",
    "@bazel/ibazel": "^0.13.2",
    "@bazel/jasmine": "^3.2.1",
    "@bazel/protractor": "^3.0.0",
    "@bazel/rollup": "^3.2.0",
    "@bazel/terser": "^3.2.0",
    "@bazel/typescript": "^3.2.0",
    "@ngrx/store-devtools": "9.1.2",
    "@types/async-retry": "^1.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.4",
    "@types/flat": "^5.0.1",
    "@types/jasmine": "^3.6.2",
    "@types/node": "^14.11.2",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "depcheck": "^1.3.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "flat": "^5.0.2",
    "history-server": "^1.3.1",
    "html-insert-assets": "^0.14.1",
    "jasmine": "^3.6.3",
    "json-schema-to-typescript": "^10.0.3",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-requirejs": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.8",
    "lighthouse": "^7.0.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2",
    "protractor": "^7.0.0",
    "requirejs": "^2.3.6",
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "shx": "^0.3.3",
    "terser": "^5.3.4",
    "ts-morph": "^9.1.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5",
    "yaml": "^1.10.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "semi": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
