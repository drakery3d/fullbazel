{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "paths": {
      "@libs/*": ["../../libs/*"],
      "@client/store": ["./store"],
      "@client/environment": ["./environment"],
      "@client/shared": ["./shared"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
